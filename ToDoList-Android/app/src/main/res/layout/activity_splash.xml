<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DD4A43"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/todo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by Balvinder Singh"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:id="@+id/textView"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_marginBottom="27dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(balvindersingh1404@gmail.com)"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView2"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to ToDo List"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:id="@+id/welcomeNote"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Todo List to save your tasks and access them anywhere. It's free. Forever."
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_below="@+id/welcomeNote"
        android:layout_alignStart="@+id/welcomeNote"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="Let's Start"
        android:id="@+id/nextButton"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

</RelativeLayout>